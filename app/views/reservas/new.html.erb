<div style="width: 80%;margin: 0 auto;">
  <h1>Hacer Reserva</h1>
  <%= form_for @reservas do |f|%>
    <div class="field">
      <%= f.label :fechaIngreso %><br />
      <%= f.date_select :fechaIngreso,:use_two_digit_numbers => true ,:order => [:day, :month, :year],:start_year => Time.now.year %><br />
    </div>
    <div class="field">
      <%= f.label :fechaSalida %><br />
      <%= f.date_select :fechaSalida,:use_two_digit_numbers => true ,:order => [:day, :month, :year],:start_year => Time.now.year %><br />
    </div>
    <div class="field">
      <%= f.label :cantidadPersonas %><br />
      <%= f.number_field :cantidadPersonas %>
    </div>
    <div class="field">
      <%= f.text_field :cantidadHabitaciones, placeholder: "Ingrese fecha de nacimiento ", class:"form-control" %>
    </div>
    <div class = "field">
      <%= f.submit "Guardar", class:"btn be-red white" %>
    </div>
  <%end%>
</div>