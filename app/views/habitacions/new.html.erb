<div style="width: 80%;margin: 0 auto;">
  <h1>Crear Habitación</h1>
  <%= form_for @habitacions do |f|%>
    <div class="field">
      <%= f.text_field :descripcionHabitacion, placeholder: "Descripción de la Habitación", class:"form-control" %>
    </div>
    <div class="field">
      <%= f.text_field :numeroPersonas, placeholder: "Número de personas para la habitación" , class:"form-control" %>
    </div>
    <div class="field">
      <%= f.text_field :tipoHabitacion, placeholder: "Tipo de habitación", class:"form-control" %>
    </div>
    <div class="field">
      <%= f.text_field :tarifa_habitacion, placeholder: "Tarifa de la habitación", class:"form-control" %>
    </div>
    <div class = "field">
      <%= f.submit "Guardar", class:"btn be-red white" %>
    </div>
  <%end%>
</div>
