<h1><%= name %> Usuarios</h1>
<%= form_for @users do |f|%>
  <% if @users.errors.any? %>
    <div id = "errores_creacion_habitacion" >
      <%= pluralize(@users.errors.count, "Errores") %>
      <ul>
        <% @users.errors.full_messages.each do |error| %>
          <li ><%= error %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_field :nombres_apellidos, placeholder: "Nombre del usuario", class:"form-control" %>
  </div>
  <div class="field">
    <%= f.text_field :nick_name, placeholder: "Apodo", class:"form-control" %>
  </div>
  <div class="field">
    <%= f.text_field :direccion, placeholder: "Direccion" , class:"form-control" %>
  </div>
  <div class="field">
    <%= f.text_field :telefono, placeholder: "Telefono", class:"form-control" %>
  </div>
  <div class="field">
    <%= f.text_field :fecha_nacimiento, placeholder: "Fecha de nacimiento", class:"form-control" %>
  </div>
  <div class="field">
    <%= f.text_field :email, placeholder: "Correo Electronico", class:"form-control" %>
  </div>
  <div class="field">
    <%= f.select :user_role, ['user','admin']%>
    <div class = "field">
      <div class="field">
        <%= f.select :estado_user, ['activo','inactivo']%>
        <div class = "field">
      <div class = "field">
        <%= f.submit "Guardar", class:"btn btn-success" %>
      </div>
    </div>
    <div class = "btn btn-info">
      <%= link_to "Volver", users_url %>
    </div>
<% end %>