<body id = "fondo_usuario">
  <div id = contener_usuarios>
    <% if user_signed_in? && current_user.admin? %>
      <h1> USUARIOS </h1>
      <div class = "btn btn-ligth">
        <%= link_to "Reservas", reservas_url %>
      </div>
      <table class = "table">
        <thead>
          <tr>
            <th> ID </th>
            <th> Nombres y Apellidos </th>
            <th> Nombre de usuario </th>
            <th> Fecha de nacimiento </th>
            <th> Dirección </th>
            <th> Teléfono </th>
            <th> Email </th>
            <th> Rol del usuario </th>
            <th> Estado del usuario </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td> <%= user.id %> </td>
              <td> <%= user.nombres_apellidos %> </td>
              <td> <%= user.nick_name %> </td>
              <td> <%= user.fecha_nacimiento.day %>  <%= "/" %> <%= user.fecha_nacimiento.month %> <%= "/" %> <%= user.fecha_nacimiento.year %></td>
              <td> <%= user.direccion %> </td>
              <td> +569 <%= user.telefono %> </td>
              <td> <%= user.email %> </td>
              <td> <%= user.user_role %> </td>
              <td> <%= user.estado_user %></td>
              <td> <%= link_to "VER", user, class:"btn btn-success" %> </td>
              <td> <%= link_to "Editar", edit_user_path(user), class: "btn btn-info" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</body>
