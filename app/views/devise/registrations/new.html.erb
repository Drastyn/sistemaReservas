<body id = "fondo_registro">
  <div id = "errores_registro">
  <%= devise_error_messages! %>
  </div>
  <div id = "contener_registro">
  <FONT SIZE = 7>REGISTRO</FONT>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <FONT SIZE = 4>
    <div class = "field">
      <%= f.label :nombres_apellidos, "NOMBRES Y APELLIDOS"%><br />
      <%= f.text_field :nombres_apellidos, autofocus: true %></div>
    <div class = "field">
      <%= f.label :nick_name,"NOMBRE DE USUARIO" %><br />
      <%= f.text_field :nick_name %><br />

    <div class = "field">
      <%= f.label :fecha_nacimiento,"FECHA DE NACIMIENTO (DEBES SER MAYOR DE 18 AÑOS)" %><br />
      <%= f.date_select :fecha_nacimiento,:use_two_digit_numbers => true ,:order => [:day, :month, :year],:start_year => Time.now.year - 18,:end_year => 1920 %><br />

    <div class = "field">
      <%= f.label :direccion,"DIRECCIÓN" %><br />
      <%= f.text_field :direccion %><br />

    <div class = "field">
      <%= f.label :telefono,"TÉLEFONO (CELULAR, SOLO LOS 8 DIGITOS)"%><br />
      <%= f.text_field :telefono %><br />

    <div class="field">
      <%= f.label :email,"CORREO ELECTRÓNICO" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password,"CONTRASEÑA" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres minimos)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation,"CONFIRMAR CONSTRASEÑA" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  <FONT>
    <div class="actions">
      <%= f.submit "Registrarse" %>
    </div>
  <% end %>
</body>
